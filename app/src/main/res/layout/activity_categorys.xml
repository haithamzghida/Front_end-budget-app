<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:onClick="retour"
                android:src="@drawable/general_back_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/general_search_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:padding="10dp"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/black_round"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="161dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-25dp"
                android:src="@drawable/food1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="coffe"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/backcoffe"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cofee"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-5dp"
                android:src="@drawable/coffe1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="car"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk2"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-60dp"
                android:src="@drawable/carback" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk3"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-20dp"
                android:src="@drawable/hospital_image" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk5"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gift"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/gift" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk7"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-7dp"
                android:src="@drawable/house" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk6"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="clothing"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-10dp"
                android:src="@drawable/clothing" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <RelativeLayout
                android:onClick="openActivity2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk8"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:padding="25dp"/>





            </RelativeLayout>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-7dp"
                android:src="@drawable/autre" />
        </RelativeLayout>






    </LinearLayout>
</ScrollView>